# ═══════════════════════════════════════════════════════════════
# SESSION SETTINGS
# ═══════════════════════════════════════════════════════════════

# Max rounds before forcing a decision (safety valve)
# Prevents infinite loops when architects can't reach consensus
MAX_ROUNDS=5

# Pause between turns in seconds
# Gives you time to read each response before the next architect responds
PAUSE_BETWEEN_TURNS=1

# ═══════════════════════════════════════════════════════════════
# DISPLAY SETTINGS
# ═══════════════════════════════════════════════════════════════

# Streaming pace (characters per second, 0 = instant)
# Controls how fast AI responses are displayed:
#   PACE=0    - Instant display (no streaming effect)
#   PACE=50   - Slow, dramatic streaming (good for presentations)
#   PACE=100  - Medium speed (balanced readability)
#   PACE=200  - Fast streaming (efficient for development)
#   PACE=9999 - Very fast (almost instant but still streams)
PACE=100

